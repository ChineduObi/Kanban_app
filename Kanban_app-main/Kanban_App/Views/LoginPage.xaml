<UserControl x:Class="Kanban_App.Views.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kanban_App.Views"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="600">

    <UserControl.Resources>
        <convertters:PriorityToColourConverter x:Key="PriorityToColourConverter"/>
        <converters:PriorityToStringConverter x:Key="PriorityToStringConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid VerticalAlignment="Stretch">
        <!--Row definition for the entire view-->
        <Grid.RowDefinitions>
            <RowDefinition Height="75">
            </RowDefinition>
        </Grid.RowDefinitions>
    </Grid>
</UserControl>
